%nav.navbar.navbar-default{role: "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{data: {target: "#bs-example-navbar-collapse-1", toggle: "collapse", type: "button"}}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      =link_to 'Partiyogita', root_path, class: 'navbar-brand', style: 'font: italic 40px Trebuchet MS;margin-top:-12px;'
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      - unless current_user
        %ul.nav.navbar-nav.navbar-right
          %li.text-success= link_to 'Login', new_user_session_path
          %li.text-warning= link_to 'Sign up', new_user_registration_path
      - else
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            %a.dropdown-toggle{href: "#", data: {toggle: 'dropdown'}}
              =current_user.first_name
              =current_user.last_name
              %b.caret
            %ul.dropdown-menu
              %li= link_to 'Profile', edit_user_path(current_user)
              %li= link_to 'Logout', destroy_user_session_path, data: {method: :delete}